<html>
    <% include partials/header %>
    <head>
    <title>New Reviewer</title>
    <style>
    body{
    color: #BEBEBE;
    margin-top:150px;
    background-color: #D1EEEE;
    }
    button{
    background-color: black;
    color: white;
    width: 100px;
    }
    </style>
</head>

    
<body>
    <div class = "container" align= "center">
        <h1>NEW REVIEW</h1>
        <p><input type="text" id="reviewer_name" placeholder= "REVIEWER NAME"></p>
        <p><input type= "number" name= "rating" placeholder= "RATING (1 TO 5)" min= "1" max= "5" required></p>
        <p><textarea id= "comment" placeholder= "REVIEW CONTENT"></textarea></p>
        <button id="submit">ADD</button>
    </div>

    <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    
    <!--input handling and ajax-->
    <script>
        var user = {reviewer_name: "", rating: "", comment: ""};
        $('#submit').click(function(event){
            user.reviewer_name = $('#reviewer_name').val();
            user.rating = $('#rating').val();
            user.comment = $('#comment').val();
            $.ajax({
                method:"POST",
                url:"/user/create",
                data: user
            }).done(function(response){
                console.log(response);
            }).fail(function(response){
                console.log(response.responseText);
            });
        });
        
        $('#getUser').click (function(event){
            $.ajax({
                method:"GET",
                url:"/user/list"
            }).done(function(response){
                console.log(response);
            }).fail(function(response){
                console.log(response.responseText);
            });
        });
    </script>
</body>
</html>
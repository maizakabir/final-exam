<html>
<head>
    <meta charset="utf-8">
    <title>Form</title>
</head>
    
<body>
    <h1>NEW REVIEW</h1>
    <input type="text" id="reviewer-name" placeholder= "REVIEWER NAME"><br/>
    <input type= "number" name= "rating" placeholder= "RATING (1 TO 5)" min= "1" max= "5" required><br/><br/>
    <textarea id= "content" placeholder= "REVIEW CONTENT"></textarea><br/>
    <button id="submit">ADD</button>

    <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    
    <!--input handling and ajax-->
    <script>
        var form = {name: "", rating: "", conten: ""};
        $('#submit').click(function(event){
            form.name = $('#reviewer-name').val();
            form.rating = $('#rating').val();
            form.content = $('#content').val();
            $.ajax({
                method:"POST",
                url:"/form/create",
                data: form
            }).done(function(response){
                console.log(response);
            }).fail(function(response){
                console.log(response.responseText);
            });
        });
        
        $('#getArticles').click (function(event){
            $.ajax({
                method:"GET",
                url:"/article/list"
            }).done(function(response){
                console.log(response);
            }).fail(function(response){
                console.log(response.responseText);
            });
        });
    </script>
</body>
</html>